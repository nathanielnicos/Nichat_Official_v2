<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_from_you"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_chat_from_you"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tv_time_from_you"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        tools:text="00:00"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toStartOf="@id/iv_from_you"
        app:layout_constraintTop_toBottomOf="@id/iv_from_you" />

</androidx.constraintlayout.widget.ConstraintLayout>